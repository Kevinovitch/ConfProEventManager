{% extends 'base.html.twig' %}

{% block title %}Edit Session - ConfPro Event Manager{% endblock %}

{% block body %}
    <div class="mb-4">
        <a href="{{ path('app_sessions_conference', {'id': session.conference.id}) }}" class="btn btn-outline-secondary">
            Back to Conference Sessions
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-0">Edit Session</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.conference) }}
                {{ form_widget(form.conference) }}
                {{ form_errors(form.conference) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.startTime) }}
                {{ form_widget(form.startTime) }}
                {{ form_errors(form.startTime) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.endTime) }}
                {{ form_widget(form.endTime) }}
                {{ form_errors(form.endTime) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.room) }}
                {{ form_widget(form.room) }}
                {{ form_errors(form.room) }}
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-primary">Update</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}