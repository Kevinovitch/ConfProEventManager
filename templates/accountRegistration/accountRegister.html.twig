{% extends 'base.html.twig' %}

{% block title %}Account registration - ConfPro Event Manager{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">Register</h1>
                </div>
                <div class="card-body">
                    {{ form_start(accountRegistrationForm) }}
                    <div class="mb-3">
                        {{ form_label(accountRegistrationForm.email) }}
                        {{ form_widget(accountRegistrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(accountRegistrationForm.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(accountRegistrationForm.plainPassword) }}
                        {{ form_widget(accountRegistrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(accountRegistrationForm.plainPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_widget(accountRegistrationForm.agreeTerms) }}
                        {{ form_label(accountRegistrationForm.agreeTerms) }}
                        {{ form_errors(accountRegistrationForm.agreeTerms) }}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    {{ form_end(accountRegistrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}