{% extends 'base.html.twig' %}

{% block title %}Registration Dashboard - ConfPro Event Manager{% endblock %}

{% block body %}
    <h1>Registration Dashboard</h1>

    <div class="mb-4">
        <a href="{{ path('app_registration_checkin') }}" class="btn btn-success">
            Check-in Participants
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="h5 mb-0">Scheduled Conferences</h2>
        </div>
        <div class="card-body">
            {% if conferences is empty %}
                <div class="alert alert-info">
                    No scheduled conferences found.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Scheduled Date</th>
                            <th>Presenter</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for conference in conferences %}
                            <tr>
                                <td>{{ conference.title }}</td>
                                <td>{{ conference.scheduledAt ? conference.scheduledAt|date('Y-m-d') : 'Not scheduled yet' }}</td>
                                <td>{{ conference.presenter.name }}</td>
                                <td>
                                    <a href="{{ path('app_conference_participants', {'id': conference.id}) }}" class="btn btn-sm btn-outline-primary">
                                        View Participants
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}